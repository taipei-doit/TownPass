{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}